# ================================
# Flavor Studios CI environment template
# Copy into your CI secret manager or run `pnpm env:check:strict` against these values locally.
# ================================

CI=true
NODE_ENV=production
VERCEL_ENV=preview

BASE_URL=https://example.com
NEXT_PUBLIC_BASE_URL=https://example.com

CRON_SECRET=__REQUIRED__
PREVIEW_SECRET=__REQUIRED__
ADMIN_JWT_SECRET=__REQUIRED__

# Firebase client config (must match your Firebase project)
NEXT_PUBLIC_FIREBASE_API_KEY=__REQUIRED__
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-app.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-app
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-app.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=__REQUIRED__
NEXT_PUBLIC_FIREBASE_APP_ID=__REQUIRED__
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# Firebase Admin SDK (supply one of the JSON keys)
FIREBASE_STORAGE_BUCKET=your-app.appspot.com
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-app","private_key_id":"<id>","private_key":"-----BEGIN PRIVATE KEY-----\\n...","client_email":"firebase-adminsdk@your-app.iam.gserviceaccount.com","client_id":"123456789"}
#FIREBASE_SERVICE_ACCOUNT_JSON=

# Toggle strict env checks only in explicit E2E contexts
SKIP_STRICT_ENV=0
E2E=false
USE_DEFAULT_ENV=0