# =============================================================
# Environment template for Flavor Studios (Next.js 15 / Firebase)
# Copy this file to `.env.local` for local development.
# Required variables are annotated below. Optional entries can
# remain commented out or empty â€“ the validation script will warn
# but will not fail in CI unless `--strict` is passed.
#
# Use `pnpm env:check` for a quick overview and
# `pnpm env:check --strict` before running `pnpm build`.
# =============================================================

# -----------------------------------------------------------------
# Core application URLs and shared secrets (required in all stages)
# -----------------------------------------------------------------
# Public origin served to the browser. In preview/production this
# should match the deployed Vercel URL.
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Server-side canonical origin used for absolute redirects.
BASE_URL=http://localhost:3000

# Secret token that protects cron endpoints.
CRON_SECRET=replace-with-random-string

# Secret used to activate Next.js Draft Mode preview sessions.
PREVIEW_SECRET=replace-with-random-string

# Secret used to sign admin JWT cookies.
ADMIN_JWT_SECRET=replace-with-random-string

# -----------------------------------------------------------------
# Firebase Admin credentials (required for preview/production)
# Provide exactly one of FIREBASE_SERVICE_ACCOUNT_KEY or
# FIREBASE_SERVICE_ACCOUNT_JSON. The key should be the JSON payload
# copied from the Firebase service account. In local development you
# can temporarily enable fallbacks with `USE_DEFAULT_ENV=1`.
# -----------------------------------------------------------------
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"demo","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\\n...","client_email":"demo@example.iam.gserviceaccount.com"}
# FIREBASE_SERVICE_ACCOUNT_JSON=

# Firebase storage bucket identifier (must match client config).
FIREBASE_STORAGE_BUCKET=demo-app.appspot.com

# -----------------------------------------------------------------
# Firebase Web SDK configuration (required for preview/production)
# -----------------------------------------------------------------
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=demo-app.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
# Optional analytics + push keys
# NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=
# NEXT_PUBLIC_FIREBASE_VAPID_KEY=

# -----------------------------------------------------------------
# Admin access control (optional)
# -----------------------------------------------------------------
# Comma-separated allowlist of admin email addresses.
ADMIN_EMAILS=admin@example.com
# ADMIN_EMAIL=
# ADMIN_DOMAIN=

# Require verified email before login. Keep `false` in production until
# verification is configured.
ADMIN_REQUIRE_EMAIL_VERIFICATION=false
NEXT_PUBLIC_REQUIRE_ADMIN_EMAIL_VERIFICATION=false

# Enable the legacy username/password login form (keep `false` in prod).
NEXT_PUBLIC_ENABLE_LEGACY_ADMIN_LOGIN=false
ADMIN_BYPASS=false

# -----------------------------------------------------------------
# Optional integrations and diagnostics
# -----------------------------------------------------------------
# NEXT_PUBLIC_GTM_CONTAINER_ID=GTM-XXXXXXX
# NEXT_PUBLIC_COOKIEYES_ID=
# PERSPECTIVE_API_KEY=
# BING_API_KEY=
# INDEXNOW_KEY=
# NOTIFY_NEW_SUBMISSION=
# UPSTASH_REDIS_REST_URL=
# UPSTASH_REDIS_REST_TOKEN=
# CONTACT_REPLY_EMAILS=admin@example.com,support@example.com
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER_SUPPORT=support@example.com
# SMTP_PASS_SUPPORT=app-password

# -----------------------------------------------------------------
# Local developer aids
# -----------------------------------------------------------------
# Allow the validation script to backfill safe defaults when secrets are
# missing. NEVER enable this in CI or production.
# USE_DEFAULT_ENV=1

# Force deterministic fixtures for tests.
# TEST_MODE=false
# NEXT_PUBLIC_TEST_MODE=false