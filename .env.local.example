# ================================
# Flavor Studios .env.local.example
# Copy to `.env.local` for local development (never commit real secrets).
# ================================

# Base URLs
BASE_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Required secrets for development builds
CRON_SECRET=local-cron-secret
PREVIEW_SECRET=local-preview-secret
ADMIN_JWT_SECRET=local-admin-jwt-secret

# Firebase web SDK (REQUIRED for client auth flows)
NEXT_PUBLIC_FIREBASE_API_KEY=demo-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=demo.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=demo
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=demo.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=1234567890
NEXT_PUBLIC_FIREBASE_APP_ID=1:1234567890:web:abcdef123456
# Optional extras
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=
NEXT_PUBLIC_FIREBASE_VAPID_KEY=

# Server-only Firebase configuration (set one of the keys when using Admin SDK locally)
FIREBASE_STORAGE_BUCKET=demo.appspot.com
#FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"demo","private_key_id":"<id>","private_key":"-----BEGIN PRIVATE KEY-----\\n...","client_email":"demo@demo.iam.gserviceaccount.com","client_id":"1234567890"}
#FIREBASE_SERVICE_ACCOUNT_JSON=

# Enable generated fallbacks only during explicit testing
USE_DEFAULT_ENV=0
SKIP_STRICT_ENV=0
E2E=false