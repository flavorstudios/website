# Copy this file to .env.local and fill in the values for local development.
# Never commit .env.local.

# --- Firebase Web SDK (client) ---
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=
NEXT_PUBLIC_FIREBASE_VAPID_KEY=

# --- Firebase Admin SDK (server) ---
# Provide exactly one of the following service-account values.
FIREBASE_SERVICE_ACCOUNT_KEY=
FIREBASE_SERVICE_ACCOUNT_JSON=
FIREBASE_SERVICE_ACCOUNT_JSON_B64=
FIREBASE_STORAGE_BUCKET=

# --- Admin session & access ---
ADMIN_JWT_SECRET=
ADMIN_EMAILS=
# ADMIN_EMAIL=
ADMIN_REQUIRE_EMAIL_VERIFICATION=false

# --- Local development helpers ---
NEXT_PUBLIC_BASE_URL=http://localhost:3000
BASE_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000