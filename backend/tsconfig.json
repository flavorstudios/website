{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@website/shared": ["../shared/dist"]
    },
    "types": ["node", "jest"],
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": [
    "**/*.test.ts",
    "**/__tests__/**"
  ]
}
