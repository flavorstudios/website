# ================================
# Flavor Studios Example .env File
# ================================

# --- Site Base URL ---
NEXT_PUBLIC_BASE_URL=https://flavorstudios.in
BASE_URL=https://flavorstudios.in

# --- Admin API Protection (Used in /api/admin/auth/route.ts) ---
ADMIN_EMAIL=your_admin_email_here
ADMIN_PASSWORD=your_admin_password_here
ADMIN_SECRET=your_admin_secret_here

# --- Bing Search API Key ---
BING_API_KEY=your_bing_api_key_here

# --- IndexNow API Key (for instant search indexing) ---
INDEXNOW_KEY=your_indexnow_key_here

# --- Firebase Web App (Client-side) ---
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain_here
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket_here
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id_here
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your_firebase_vapid_key_here

# --- Perspective Comment Analyzer API ---
PERSPECTIVE_API_KEY=your_perspective_api_key_here

# --- Neon (Postgres) Database Connection String ---
DATABASE_URL=your_database_url_here

# --- Firebase Admin SDK (for server-side only, as JSON string) ---
FIREBASE_SERVICE_ACCOUNT_KEY=your_firebase_service_account_key_json_here
