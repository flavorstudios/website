# ----------------------------------------------------------------------------
# Flavor Studios Environment Template
# ----------------------------------------------------------------------------
# Required values are validated on CI and during "pnpm build" via zod schemas
# in env/server-validation.ts. Optional client variables mirror values consumed
# in env/client-validation.ts.
# ----------------------------------------------------------------------------

# === Server (Required) =======================================================
BASE_URL=
CRON_SECRET=
PREVIEW_SECRET=
ADMIN_JWT_SECRET=

# === Server (Optional) =======================================================
# Provide at least one admin email for secure dashboard access.
ADMIN_EMAILS=
ADMIN_EMAIL=
ADMIN_REQUIRE_EMAIL_VERIFICATION=
ADMIN_DISPOSABLE_DOMAINS=

# Derived automatically in CI when omitted, but may be set explicitly.
NEXT_PUBLIC_BASE_URL=

# Firebase Admin configuration (one of KEY or JSON is required in production).
FIREBASE_SERVICE_ACCOUNT_KEY=
FIREBASE_SERVICE_ACCOUNT_JSON=

# Storage bucket must match the public bucket when both are defined.
FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=

# Additional server-side knobs surfaced through serverEnv in env/server.ts.
ADMIN_AUTH_DISABLED=
ADMIN_BYPASS=
ADMIN_COOKIE_DOMAIN=
ADMIN_DOMAIN=
ADMIN_API_KEY=
ADMIN_PASSWORD_HASH=
ADMIN_SESSION_EXPIRY_DAYS=
ADMIN_TOTP_SECRET=
ANALYZE=
BING_API_KEY=
CONTACT_REPLY_EMAILS=
CRON_TIMEOUT_MS=
CRON_MAX_ATTEMPTS=
CRON_LOG_RETENTION_DAYS=
DEBUG_ADMIN=
FUNCTIONS_EMULATOR=
INDEXNOW_KEY=
NOTIFY_NEW_SUBMISSION=
PERSPECTIVE_API_KEY=
RSS_ADMIN_CONTACT=
RSS_MANAGING_EDITOR=
SMTP_HOST=
SMTP_PASS=
SMTP_PORT=
SMTP_SECURE=
SMTP_USER=
VAPID_PRIVATE_KEY=
VAPID_PUBLIC_KEY=
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
E2E=

# === Client (Optional) =======================================================
# All NEXT_PUBLIC_* variables are optional unless explicitly required by code.
NEXT_PUBLIC_BASE_URL=
NEXT_PUBLIC_E2E=
NEXT_PUBLIC_GTM_CONTAINER_ID=
NEXT_PUBLIC_ENABLE_GTM_COOKIE_BANNER=
NEXT_PUBLIC_COOKIEYES_ID=
# For Firebase client SDKs, copy these values into `.env.local` for development
# and configure the same keys in Vercel → Project Settings → Environment Variables
# (Development, Preview, Production) before deploying.
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_VAPID_KEY=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=
NEXT_PUBLIC_ADMIN_ROUTE_PREFIXES=
NEXT_PUBLIC_CUSTOM_ROLE_PERMISSIONS=
NEXT_PUBLIC_ENABLE_LEGACY_ADMIN_LOGIN=
NEXT_PUBLIC_REQUIRE_ADMIN_EMAIL_VERIFICATION=
NEXT_PUBLIC_TEST_MODE=

# Shared flag that can be toggled from either server or client scope.
TEST_MODE=
