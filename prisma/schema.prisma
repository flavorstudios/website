generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id                String   @id @default(uuid())
  type              String   // "blog" or "watch"
  slug              String   @unique
  title             String
  description       String
  accessibleLabel   String?
  icon              String?
  order             Int      @default(0)
  isActive          Boolean  @default(true)
  postCount         Int      @default(0)
  metaTitle         String
  metaDescription   String
  canonicalUrl      String
  robots            String?
  ogTitle           String
  ogDescription     String
  ogUrl             String
  ogType            String
  ogSiteName        String
  ogImages          Json
  twitterCard       String
  twitterSite       String
  twitterTitle      String
  twitterDescription String
  twitterImages     Json
  schema            Json
}