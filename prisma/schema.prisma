generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CategoryType {
  BLOG
  VIDEO
}

model Category {
  id                 String    @id @default(uuid())
  name               String
  slug               String
  type               CategoryType
  description        String?
  color              String?
  icon               String?
  order              Int       @default(0)
  isActive           Boolean   @default(true)

  // SEO & Metadata fields
  metaTitle          String?
  metaDescription    String?
  canonicalUrl       String?
  robots             String?
  ogTitle            String?
  ogDescription      String?
  ogUrl              String?
  ogType             String?
  ogSiteName         String?
  ogImages           Json?      // Array: [{url, width, height}]
  twitterCard        String?
  twitterSite        String?
  twitterTitle       String?
  twitterDescription String?
  twitterImages      Json?      // Array: [url1, url2, ...]

  // Tooltips & Accessibility
  tooltip            String?
  accessibleLabel    String?

  // Schema.org JSON-LD
  schema             Json?

  // Misc
  postCount          Int?       // For dashboard/statistics
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt

  @@unique([slug, type], name: "slug_type")
}
