{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES2022",                  // CHANGED: for modern features
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,                      // Keep this for Next.js, won't emit JS
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["node", "jest", "@testing-library/jest-dom", "react", "react-dom"],
    "typeRoots": ["./types", "./node_modules/@types", "./node_modules/@testing-library"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["*"],
      "jest-axe": ["types/jest-axe"],
      "expect": ["types/expect"],
      "pretty-format": ["types/pretty-format"],
      "undici-types": ["types/undici-types"],
      "lodash": ["types/lodash"]
    }
  },
  "include": [
    "next-env.d.ts",
    "types/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "functions",
    "firebase",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "storybook",
    "scripts"
  ]
}